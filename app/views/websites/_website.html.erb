<turbo-frame id="<%= dom_id(website) %>">
  <p class="my-5">
    <strong class="block font-bold mb-1">Title:</strong>
    <%= website.title %>
  </p>
  <p class="my-5">
    <strong class="block font-bold mb-1">Website URL:</strong>
    <div title="<%= website.body %>">
      <%= truncate_url(website.body) %>
    </div>
  </p>
  <div class="website-item">
    <p class="my-5">
      <strong class="block font-bold mb-1">Status:</strong>
      <% if website.status == 'online' %>
        <span class="text-green-500">Online</span>
      <% else %>
        <span class="text-red-500">Offline</span>
      <% end %>
    </p>
  </div>
</turbo-frame>
