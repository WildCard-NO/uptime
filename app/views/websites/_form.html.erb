<%= form_with(model: website, class: "contents") do |form| %>
  <% if website.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(website.errors.count, "error") %> prohibited this website from being saved:</h2>

      <ul class="list-disc ml-6">
        <% website.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <h1>Name of Website</h1>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": website.errors[:title].none?, "border-red-400 focus:outline-red-600": website.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <h1>URL of Website</h1>
    <%= form.text_area :body, rows: 4, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": website.errors[:body].none?, "border-red-400 focus:outline-red-600": website.errors[:body].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :time %>
    <%= form.number_field :time, min: 1, step: 1, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": website.errors[:time].none?, "border-red-400 focus:outline-red-600": website.errors[:time].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
